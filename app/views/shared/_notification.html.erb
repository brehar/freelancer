<% unless flash.empty? %>
  <script>
    <% flash.each do |key, value| %>
      <% type = key.to_s.gsub('alert', 'error').gsub('notice', 'success') %>
      new Noty({
          layout: 'topRight',
          text: '<%= value %>',
          theme: 'sunset',
          timeout: 3000,
          type: '<%= type %>'
      }).show();
    <% end %>
  </script>
<% end %>
