<section class="hero is-primary is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6-tablet is-6-desktop is-6-widescreen">
          <div class="box">
            <div class="field has-text-centered">
              <strong>Register</strong>
            </div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render 'devise/shared/error_messages', resource: resource %>

              <div class="field">
                <%= f.label :full_name, 'Full Name', class: 'label' %>
                <%= f.text_field :full_name, autofocus: true, autocomplete: 'name', class: 'input' %>
              </div>

              <div class="field">
                <%= f.label :email, class: 'label' %>
                <%= f.email_field :email, autocomplete: 'email', class: 'input' %>
              </div>

              <div class="field">
                <%= f.label :password, class: 'label' %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: 'new-password', class: 'input' %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation, 'Password Confirmation', class: 'label' %>
                <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'input' %>
              </div>

              <div class="field">
                <%= f.submit 'Go!', class: 'button is-danger is-fullwidth m-t-10 m-b-10' %>
              </div>
            <% end %>

            <%= link_to 'Register With Facebook', user_facebook_omniauth_authorize_path, class: 'button is-primary is-fullwidth m-b-10' %>

            <%= render 'devise/shared/links' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
