<% if resource.errors.any? %>
  <script>
      <% resource.errors.full_messages.each do |message| %>
          new Noty({
              layout: 'topRight',
              text: '<%= message %>',
              theme: 'sunset',
              timeout: 3000,
              type: 'error'
          }).show();
      <% end %>
  </script>
<% end %>
